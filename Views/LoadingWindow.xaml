<Window x:Class="SJAPP.Views.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Width="320" Height="320"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <!-- 視覺資源 -->
    <Window.Resources>
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF6B48FF" Offset="0"/>
            <GradientStop Color="#FF00C6FB" Offset="1"/>
        </LinearGradientBrush>

        <Style TargetType="Ellipse">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        </Style>
    </Window.Resources>

    <!-- 主容器 -->
    <Grid>
        <!-- 背景遮罩 -->
        <Border CornerRadius="24" 
                Background="{StaticResource BackgroundGradient}"
                Opacity="0.95">
            <Border.Effect>
                <DropShadowEffect BlurRadius="24" 
                                  ShadowDepth="0"
                                  Color="#40000000"/>
            </Border.Effect>
        </Border>

        <!-- 內容區 -->
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Margin="20">

            <!-- 動畫圓點群 -->
            <Canvas Width="120" Height="120" Margin="0,0,0,20">
                <!-- 主旋轉動畫 -->
                <Ellipse Canvas.Left="50" Canvas.Top="10"
                         Fill="#FFF">
                    <Ellipse.RenderTransform>
                        <RotateTransform x:Name="MainRotate" Angle="0"/>
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        Storyboard.TargetName="MainRotate"
                                        Storyboard.TargetProperty="Angle"
                                        From="0" To="360"
                                        Duration="0:0:2.4"
                                        RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>

                <!-- 副動畫圓點 -->
                <Ellipse Canvas.Left="30" Canvas.Top="50" 
                         Fill="#80FFFFFF">
                    <Ellipse.RenderTransform>
                        <ScaleTransform x:Name="Scale1" ScaleX="1" ScaleY="1"/>
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimationUsingKeyFrames
                                        Storyboard.TargetName="Scale1"
                                        Storyboard.TargetProperty="ScaleX"
                                        RepeatBehavior="Forever">
                                        <LinearDoubleKeyFrame KeyTime="0:0:0" Value="1"/>
                                        <LinearDoubleKeyFrame KeyTime="0:0:0.8" Value="1.6"/>
                                        <LinearDoubleKeyFrame KeyTime="0:0:1.6" Value="1"/>
                                    </DoubleAnimationUsingKeyFrames>
                                    <DoubleAnimationUsingKeyFrames
                                        Storyboard.TargetName="Scale1"
                                        Storyboard.TargetProperty="ScaleY"
                                        RepeatBehavior="Forever">
                                        <LinearDoubleKeyFrame KeyTime="0:0:0" Value="1"/>
                                        <LinearDoubleKeyFrame KeyTime="0:0:0.8" Value="1.6"/>
                                        <LinearDoubleKeyFrame KeyTime="0:0:1.6" Value="1"/>
                                    </DoubleAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
            </Canvas>

            <!-- 文字區 -->
            <TextBlock Text="連線檢查中..." 
                       FontSize="22"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="8" 
                                     ShadowDepth="0"
                                     Color="#40000000"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- 動態提示文字 -->
            <TextBlock x:Name="StatusText" 
                       Text="正在初始化連線..."
                       FontSize="14"
                       Foreground="#DDFFFFFF"
                       Margin="0,8,0,0"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
